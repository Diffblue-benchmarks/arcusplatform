capability Device
version "1.0"

onEvent {
	vars.message = message
	vars.handledBy = "wildcard"
	increment(vars)
}

onEvent('TestEvent') {
	vars.message = message
	vars.handledBy = "TestEvent"
	increment(vars)
}

static int increment(curVars) {
	if(curVars.eventCount == null) {
		curVars.eventCount = 1
	}else {
		curVars.eventCount ++
	}
}

