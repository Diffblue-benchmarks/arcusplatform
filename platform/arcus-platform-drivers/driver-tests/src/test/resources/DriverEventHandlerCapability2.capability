capability	DoorLock
capability	Device


version		"1.0"

onAdded {
	println "onAdded in DriverEventHandler2.capability is called"
	eventCount(vars, "onAdded")
}

onConnected {
	println "onConnected in DriverEventHandler2.capability is called"
	eventCount(vars, "onConnected")
	
}

onDisconnected {
	eventCount(vars, "onDisconnected")
}

onRemoved {
	eventCount(vars, "onRemoved")
}

static void eventCount(curVars, handledBy) {
	curVars.handledBy = handledBy
	if(curVars.eventCount == null) {
		curVars.eventCount = 1
	}else {
		curVars.eventCount ++
	}
	
}

