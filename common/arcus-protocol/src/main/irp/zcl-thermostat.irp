   u8 numberOfTransitionsForSequence;
   u8 dayOfWeekForSequence;
   u8 modeForSequence;
   u8[] payload;
}

message zcl.Thermostat.RelayStatusLog<id="0x01",group="server"> {
   u16 timeOfDay;
   u16 relayStatus;
   u16 localTemperature;
   u8 humidityInPercentage;
   i16 setpoint;
   u16 unreadEntries;
}
