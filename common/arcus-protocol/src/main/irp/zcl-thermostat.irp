message zcl.Thermostat.SetPointRaiseLower<id="0x00",group="client"> {
   const u8 MODE_HEAT = 0x00;
   const u8 MODE_COOL = 0x01;
   const u8 MODE_BOTH = 0x02;

   u8 mode;
   u8 amount;
}

message zcl.Thermostat.SetWeeklySchedule<id="0x01",group="client"> {
   const u8 DAY_OF_WEEK_SUNDAY = 0x01;
   const u8 DAY_OF_WEEK_MONDAY = 0x02;
   const u8 DAY_OF_WEEK_TUESDAY = 0x04;
   const u8 DAY_OF_WEEK_WEDNESDAY = 0x08;
   const u8 DAY_OF_WEEK_THURSDAY = 0x10;
   const u8 DAY_OF_WEEK_FRIDAY = 0x20;
   const u8 DAY_OF_WEEK_SATURDAY = 0x40;
   const u8 DAY_OF_WEEK_AWAY = 0x80;

   const u8 MODE_HEATSETPOINT_FIELD_PRESENT = 0x01;
   const u8 MODE_COOLSETPOINT_FIELD_PRESENT = 0x02;

   u8 numberOfTransitionsForSequence;
   u8 dayOfWeekForSequence;
   u8 modeForSequence;
   u8[] payload;
}

message zcl.Thermostat.GetWeeklySchedule<id="0x02",group="client"> {
   const u8 DAY_OF_WEEK_SUNDAY = 0x01;
   const u8 DAY_OF_WEEK_MONDAY = 0x02;
   const u8 DAY_OF_WEEK_TUESDAY = 0x04;
   const u8 DAY_OF_WEEK_WEDNESDAY = 0x08;
   const u8 DAY_OF_WEEK_THURSDAY = 0x10;
   const u8 DAY_OF_WEEK_FRIDAY = 0x20;
   const u8 DAY_OF_WEEK_SATURDAY = 0x40;
   const u8 DAY_OF_WEEK_AWAY = 0x80;

   const u8 MODE_HEATSETPOINT_FIELD_PRESENT = 0x01;
   const u8 MODE_COOLSETPOINT_FIELD_PRESENT = 0x02;

   u8 daysToReturn;
   u8 modeToReturn;
}

message zcl.Thermostat.ClearWeeklySchedule<id="0x03",group="client"> {
}

message zcl.Thermostat.GetRelayStatusLog<id="0x04",group="client"> {
}

message zcl.Thermostat.CurrentWeeklySchedule<id="0x00",group="server"> {
   const u8 DAY_OF_WEEK_SUNDAY = 0x01;
   const u8 DAY_OF_WEEK_MONDAY = 0x02;
   const u8 DAY_OF_WEEK_TUESDAY = 0x04;
   const u8 DAY_OF_WEEK_WEDNESDAY = 0x08;
